<div class = "container px-5 px-sm-0">

 <div class = "row">
  <div class = "col-sm-12 col-sm-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>User info</h2>
   <div class = "error_explanation">
 <% if @user.errors.any? %>
  <h3 class="devise-error-messages"><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
  <ul><% @user.errors.full_messages.each do |message| %>
        <li class="devise-error-messages"><%= message %></li>
      <% end %>
  </ul>
 <% end %>
</div>
    <%= form_with model: @user, local:true do |f| %>
    <div class = form-group>
     <label for = "user_name">Name</label>
     <div><%= f.text_field :name, class: "form-control" %></div>
    </div>
    <div class = form-group>
     <label for = "user_image">Image</label>
     <div><%= f.file_field :profile_image %></div>
    </div>
    <div class = form-group>
     <label for = "user_introduction">Introduction</label>
     <div><%= f.text_area :introduction, class: "form-control" %></div>
    </div> 
    <div class = form-group>
      <%= f.submit "Update User", class: "btn btn-secondary" %>
    </div>
    </div>
    <% end %>
  </div>
 </div>
</div>