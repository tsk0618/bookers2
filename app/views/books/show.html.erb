<div class="container px-5 px-sm-0">
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
 <% end %>
  <div class="row">
   <div class="col-md-3">
    <%= render 'users/list', user: @user %>
    <%= render 'books/post', book: @book %>
   </div>    
   <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
    <table class= "table table-hover table-inverse">
     
     <tbody>
       <tr>
        <td>
         <%= link_to user_path(@books.user.id) do %>
          <%= attachment_image_tag @user, :profile_image, :fill, 40, 40,  fallback: "no_image.jpg", size: "40x40" %></br>
          <%= @books.user.name %>
         <% end %>
        <td><%= link_to"#{@books.title}",book_path(@books.id) %></td>
        <td><%= @books.body %></td>
        <% if @books.user.id.to_i == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@books.id), class: "btn btn-success btn-sm" %></td>
        <td><%= link_to "Destroy", book_path(@books.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger btn-sm" %></td>
        <% end %>
       </tr>
      
     </tbody>
    </table>
   </div>
  </div>
 </div> 