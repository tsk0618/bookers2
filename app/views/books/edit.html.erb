<div class = "container px-5 px-sm-0">

 <div class = "row">
  <div class = "col-sm-12 col-sm-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h2>Editing Book</h2>
   <% if @book.errors.any? %>
    <h3 class="devise-error-messages"><%= @book.errors.count %>errors prohibited this obj from being saved:</h3>
    <% @book.errors.full_messages.each do |message| %>
     <li class="devise-error-messages"><%= message %></li>
    <% end %>
   <% end %>
    <%= form_with model: @book, local:true do |f| %>
    <div class = form-group>
     <label for = "title_name">Title</label>
     <div><%= f.text_field :title, class: "form-control" %></div>
    </div>
    <div class = form-group>
     <label for = "user_introduction">Opinion</label>
     <div><%= f.text_area :body, class: "form-control" %></div>
    </div> 
    <div class = form-group>
      <%= f.submit "Update Book", class: "btn btn-success" %>
    </div>
     <%= link_to "Show", book_path %>
     <%= link_to "Back", books_path %>
    </div>
    <% end %>
    
  </div>
 </div>
</div>